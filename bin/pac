#!/usr/bin/env rc

fn usage {
	printf 'usage: pac install\n'
	printf '       pac fetch <name> <shasum> <url>\n'
	printf '       pac env\n'
	exit
}

# usage: pac
if (~ $#* 0) {
	usage
}

# usage: pac
switch ($1) {
case 'install'
	shift
	pac-install $*
	exit
case 'fetch'
	shift
	pac-fetch $*
case *
	usage
}
